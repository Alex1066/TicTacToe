<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3ECEC"
    android:backgroundTint="#151717"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="@dimen/side_menu_landscape"
        android:layout_height="match_parent"
        android:background="#193DA8"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <Button
        android:id="@+id/button_00"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:layout_marginTop="@dimen/margin_top"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="parent">
        <!--            android:text="@string/Click">-->
    </Button>

    <Button
        android:id="@+id/button_01"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:layout_marginTop="@dimen/margin_top"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintEnd_toStartOf="@+id/button_02"
        app:layout_constraintStart_toEndOf="@+id/button_00"
        app:layout_constraintTop_toTopOf="parent">
        <!--            android:text="@string/Click">-->
    </Button>

    <Button
        android:id="@+id/button_02"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:layout_marginTop="@dimen/margin_top"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintEnd_toEndOf="@+id/divider2"
        app:layout_constraintTop_toTopOf="parent">
        <!--            android:text="@string/Click1">-->
    </Button>

    <Button
        android:id="@+id/button_10"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/button_20"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/button_00" />

    <Button
        android:id="@+id/button_11"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/button_21"
        app:layout_constraintEnd_toStartOf="@+id/button_12"
        app:layout_constraintStart_toEndOf="@+id/button_10"
        app:layout_constraintTop_toBottomOf="@+id/button_01" />

    <Button
        android:id="@+id/button_12"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/button_22"
        app:layout_constraintEnd_toEndOf="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@+id/button_02" />

    <Button
        android:id="@+id/button_20"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider" />

    <Button
        android:id="@+id/button_21"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/button_20"
        app:layout_constraintEnd_toStartOf="@+id/button_22"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/button_20" />

    <Button
        android:id="@+id/button_22"
        android:layout_width="@dimen/button_width_landscape"
        android:layout_height="@dimen/button_height_landscape"
        android:background="#FFFFFF"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/button_21"
        app:layout_constraintEnd_toEndOf="@+id/divider2" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textt"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CF2727"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
